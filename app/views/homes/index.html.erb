        <%# PLACE投稿履歴の記述(showクラスによってデフォルトはここを表示) %>
        <div class="mypage__contents myshow">
          <% @myplaces.each do |myplace| %>
            <div class="mypage__content place__show" data-pname="<%= myplace.name %>" 
            data-address="<%= myplace.address %>"
            data-open="<%= myplace.open %>" data-close="<%= myplace.close %>" 
            data-number="<%= myplace.number %>" data-sheet="<%= myplace.sheet %>"
            data-content="<%= myplace.content %>" data-station="<%= myplace.station %>" data-walk="<%= myplace.walk %>" 
            data-pcheckbox="<% myplace.ptags.each do |ptag| %> 
                              <div class='check-icon'> <%= ptag.name %> </div> 
                            <% end %>" >
              <img class="content__img" src="<%= myplace.image %>" >
              <p class="content content__store"><%= myplace.name %>
              <p class="content content__address"><%= myplace.address %>
              <p class="content content__open">営業時間：<%= myplace.open %> 〜 <%= myplace.close %>
              <p class="content content__station">最寄り駅：<%= myplace.station %> <%= myplace.walk %>
            </div>
          <% end %>
        </div>
        <%# PLACE投稿履歴記述ここまで %>
        <%# MUSIC投稿履歴記述 %>
        <div class="mypage__contents">
          <% @mymusics.each do |mymusic| %>
            <div class="mypage__content music__show" 
        data-mname="<%= mymusic.name %>" data-url="<%= mymusic.url %>" data-artist="<%= mymusic.artist %>"
        data-playtime="<%= mymusic.playtime %>" data-mcontent="<%= mymusic.content %>">
              <div class="youtube content__movie">
                <iframe data-src="<%= mymusic.url %>"></iframe>
              </div>
              <div class="mshow">
                <p class="content content__title"><%= mymusic.name %>
                <p class="content content__artist">アーティスト：<%= mymusic.artist %>
                <p class="content content__playtime">再生時間：<%= mymusic.playtime %>
              </div>
            </div>
          <% end %>
        </div>
        <%# MUSIC投稿履歴記述ここまで %>
        <%# PLACE投稿お気に入り記述 %>
        <div class="mypage__contents">
        <% if @likeplaces %>
          <% @likeplaces.each do |likeplace| %>
            <div class="mypage__content place__show" data-pname="<%= likeplace.name %>" 
            data-address="<%= likeplace.address %>"
            data-open="<%= likeplace.open %>" data-close="<%= likeplace.close %>" 
            data-number="<%= likeplace.number %>" data-sheet="<%= likeplace.sheet %>"
            data-content="<%= likeplace.content %>" data-station="<%= likeplace.station %>" data-walk="<%= likeplace.walk %>" 
            data-pcheckbox="<% likeplace.ptags.each do |ptag| %> 
                              <div class='check-icon'> <%= ptag.name %> </div> 
                            <% end %>" >
