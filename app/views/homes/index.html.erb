              <p class="content content__address"><%= likeplace.address %>
              <p class="content content__open">営業時間：<%= likeplace.open %> 〜 <%= likeplace.close %>
              <p class="content content__station">最寄り駅：<%= likeplace.station %> <%= likeplace.walk %>
            </div>
          <% end %>
        <% else %>
